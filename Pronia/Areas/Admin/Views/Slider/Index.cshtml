@using Pronia.Models;
@model List<Slider>
@{
    ViewData["Title"] = "Index";
}
<div class="content-wrapper">
    <div class="row">
           <div class="col-lg-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Basic Table</h4>
                        <a class="btn btn-primary" asp-action="Create">Create</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Title</th>
                                        <th>Offer</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var slider in Model)
                                {
                                    <tr>
                                        <td>
                                           <img src="~/assets/images/website-images/@slider.Image">
                                          </td>
                                        <td>@slider.Title</td>
                                        <td>@slider.Offer</td>
                                        <td>
                                            <a class="btn btn-info" asp-action="Detail" asp-route-id="@slider.Id">Detail</a>
                                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@slider.Id">Update</a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@slider.Id">Delete</a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>



    </div>
</div>

