
@{
    ViewData["Title"] = "Delete";
}

@model Product
<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <img class="card-img-top" src="~/assets/images/website-images/@Model.Image" style="width:50%"
                     alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">
                        @Model.Name<h5>
                            <p class="card-text">Description: @Model.Description</p>
                            <p class="card-text">Offer: @Model.Price</p>
                            <div class="btn-box d-flex">
                                <a asp-action="Index" class="btn btn-primary">Go back</a>
                                <form method="post">
                                    <button type="submit" class="btn btn-danger ml-3">Delete</button>
                                </form>
                            </div>
                </div>
            </div>
        </div>
    </div>
</div>
