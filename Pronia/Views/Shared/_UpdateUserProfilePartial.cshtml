


@model UserUpdateViewModel

<div class="myaccount-details">
    <form asp-action="UpdateProfile" class="myaccount-form" method="post">
        <div class="myaccount-form-inner">
            <div class="single-input">
                <label>Fullname</label>
                <input asp-for="Fullname" placeholder="Fullname" />
                <span asp-validation-for="Fullname" class="text-danger"></span>
            </div>
            <div class="single-input ">
                <label>Username</label>
                <input asp-for="Username" placeholder="Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="single-input">
                <label>Email</label>
                <input asp-for="Email" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="single-input">
                <label>
                    Current Password
                </label>
                <input asp-for="CurrentPassword"  />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="single-input">
                <label>
                    New Password 
                </label>
                <input asp-for="NewPassword" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="single-input">
                <label>Confirm New Password</label>
                <input asp-for="ConfirmNewPassword"/>
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="single-input">
                <button class="btn btn-custom-size lg-size btn-pronia-primary"
                        type="submit">
                    <span>SAVE CHANGES</span>
                </button>
            </div>
        </div>
    </form>
</div>
